
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />  
    <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body ng-app="myDubaiApp" ng-controller="loginController">

    <div class="row">
        <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
                        <h1 class="text-center">Login</h1>
                    </div>


                    <div class="modal-body">

                        <div class="alert alert-{{alert.type}}" ng-model="alert" ng-show="alert.msg" role="alert">
                            {{alert.msg}}
                        </div>


                        <form class="form col-md-12 center-block">

                            <div class="form-group">
                                <input focus-on="email"  type="text" class="form-control input-lg" placeholder="Email" ng-change="clearMsg()" ng-model="email" focus="{{email}}" ng-readonly="isProcessing">
                            </div>
                            <div class="form-group">
                                <input focus-on="password" type="password" ng-change="clearMsg()" ng-model="password" focus="{{password}}" class="form-control input-lg" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-lg btn-block" ng-click="validate()" ng-disabled="isProcessing">Sign In</button>
                                <span class="pull-right"><a href="#">Register</a></span><span><a href="#">Need help?</a></span>
                            </div>
                        </form>
                    </div>


                    <div class="modal-footer">
                        <div class="col-md-12">
                           @* <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>*@
                        </div>
                    </div>

                </div> <!---model-content--->

            </div>
        </div>
    </div> <!---row main -->



    <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script type="text/javascript" src="~/Scripts/AngularModule/MyDubaiApp.js"></script>
    <script type="text/javascript" src="~/Scripts/AngularControllers/LoginController.js"></script>
</body>
</html>
